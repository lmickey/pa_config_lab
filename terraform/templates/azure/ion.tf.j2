# SD-WAN ION Device Resources
# Generated by pa_config_lab TerraformGenerator
#
# ION devices bootstrap via Prisma SD-WAN cloud controller.
# No bootstrap storage account is needed (unlike VM-Series firewalls).

{% for ion in ion_devices %}
# =============================================================================
# ION Device: {{ ion.name }}
# Type: {{ ion.ion_type }} | Role: {{ ion.role }}
{% if ion.vm_settings.availability_zone %}
# Availability Zone: {{ ion.vm_settings.availability_zone }}
{% endif %}
# =============================================================================

# ---------- Public IP (WAN interface) ----------

resource "azurerm_public_ip" "{{ ion.name | replace('-', '_') }}_wan" {
  name                = "{{ ion.name }}-wan-pip"
  location            = azurerm_resource_group.main.location
  resource_group_name = azurerm_resource_group.main.name
  allocation_method   = "Static"
  sku                 = "Standard"

  tags = merge(var.tags, {
    "ion_device" = "{{ ion.name }}"
    "interface"  = "wan"
  })
}

# ---------- Network Interfaces ----------

# WAN interface (untrust subnet, public IP for SD-WAN tunnels)
resource "azurerm_network_interface" "{{ ion.name | replace('-', '_') }}_wan" {
  name                 = "{{ ion.name }}-wan-nic"
  location             = azurerm_resource_group.main.location
  resource_group_name  = azurerm_resource_group.main.name
  enable_ip_forwarding = true

  ip_configuration {
    name                          = "wan"
    subnet_id                     = azurerm_subnet.{{ deployment.get_subnet_name('untrust') | replace('-', '_') }}.id
    private_ip_address_allocation = "Dynamic"
    public_ip_address_id          = azurerm_public_ip.{{ ion.name | replace('-', '_') }}_wan.id
  }

  tags = merge(var.tags, {
    "ion_device" = "{{ ion.name }}"
    "interface"  = "wan"
  })
}

# LAN interface (trust subnet, no public IP)
{% set trust_subnet = deployment.get_subnet_name('trust') %}
resource "azurerm_network_interface" "{{ ion.name | replace('-', '_') }}_lan" {
  name                 = "{{ ion.name }}-lan-nic"
  location             = azurerm_resource_group.main.location
  resource_group_name  = azurerm_resource_group.main.name
  enable_ip_forwarding = true

  ip_configuration {
    name                          = "lan"
    subnet_id                     = azurerm_subnet.{{ trust_subnet | replace('-', '_') }}.id
    private_ip_address_allocation = "Dynamic"
  }

  tags = merge(var.tags, {
    "ion_device" = "{{ ion.name }}"
    "interface"  = "lan"
  })
}

# ---------- Virtual Machine ----------

resource "azurerm_linux_virtual_machine" "{{ ion.name | replace('-', '_') }}" {
  name                            = "{{ ion.name }}"
  location                        = azurerm_resource_group.main.location
  resource_group_name             = azurerm_resource_group.main.name
  size                            = "{{ ion.vm_settings.size }}"
  admin_username                  = var.ion_username
  admin_password                  = var.ion_password
  disable_password_authentication = false
{% if ion.vm_settings.availability_zone %}
  zone                            = "{{ ion.vm_settings.availability_zone }}"
{% endif %}

  # ION has only WAN + LAN interfaces (no management NIC)
  network_interface_ids = [
    azurerm_network_interface.{{ ion.name | replace('-', '_') }}_wan.id,
    azurerm_network_interface.{{ ion.name | replace('-', '_') }}_lan.id,
  ]

  os_disk {
    name                 = "{{ ion.name }}-osdisk"
    caching              = "ReadWrite"
    storage_account_type = "Premium_LRS"
  }

  source_image_reference {
    publisher = "{{ ion.vm_settings.image.publisher }}"
    offer     = "{{ ion.vm_settings.image.offer }}"
    sku       = "{{ ion.vm_settings.image.sku }}"
    version   = "{{ ion.vm_settings.image.version }}"
  }

  plan {
    name      = "{{ ion.vm_settings.image.sku }}"
    publisher = "{{ ion.vm_settings.image.publisher }}"
    product   = "{{ ion.vm_settings.image.offer }}"
  }

  boot_diagnostics {
    storage_account_uri = null  # Use managed storage
  }

  tags = merge(var.tags, {
    "ion_type" = "{{ ion.ion_type }}"
    "role"     = "{{ ion.role }}"
  })
}

{% endfor %}
