# Supporting VMs - Servers, Clients, ZTNA Connectors
# Generated by pa_config_lab TerraformGenerator

# =============================================================================
# Server VMs
# =============================================================================

{% for server in servers %}
# ---------- Server: {{ server.name }} ----------

resource "azurerm_network_interface" "{{ server.name | replace('-', '_') }}" {
  name                = "{{ server.name }}-nic"
  location            = azurerm_resource_group.main.location
  resource_group_name = azurerm_resource_group.main.name

  ip_configuration {
    name                          = "primary"
    subnet_id                     = azurerm_subnet.{{ deployment.get_subnet_name('trust') | replace('-', '_') }}.id
    private_ip_address_allocation = "Dynamic"
  }

  tags = var.tags
}

resource "azurerm_linux_virtual_machine" "{{ server.name | replace('-', '_') }}" {
  name                            = "{{ server.name }}"
  location                        = azurerm_resource_group.main.location
  resource_group_name             = azurerm_resource_group.main.name
  size                            = "{{ server.vm_settings.size }}"
  admin_username                  = var.vm_username
  admin_password                  = var.vm_password
  disable_password_authentication = false

  network_interface_ids = [
    azurerm_network_interface.{{ server.name | replace('-', '_') }}.id,
  ]

  os_disk {
    name                 = "{{ server.name }}-osdisk"
    caching              = "ReadWrite"
    storage_account_type = "Standard_LRS"
  }

  source_image_reference {
    publisher = "{{ server.vm_settings.image.publisher }}"
    offer     = "{{ server.vm_settings.image.offer }}"
    sku       = "{{ server.vm_settings.image.sku }}"
    version   = "{{ server.vm_settings.image.version }}"
  }

  tags = merge(var.tags, {
    "role" = "server"
  })
}

{% endfor %}

