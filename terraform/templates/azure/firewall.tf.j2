# VM-Series Firewall Resources
# Generated by pa_config_lab TerraformGenerator

{% for fw in firewalls %}
# =============================================================================
# Firewall: {{ fw.name }}
# Type: {{ fw.firewall_type }}
# =============================================================================

# ---------- Public IPs ----------

resource "azurerm_public_ip" "{{ fw.name | replace('-', '_') }}_mgmt" {
  name                = "{{ fw.name }}-mgmt-pip"
  location            = azurerm_resource_group.main.location
  resource_group_name = azurerm_resource_group.main.name
  allocation_method   = "Static"
  sku                 = "Standard"

  tags = var.tags
}

resource "azurerm_public_ip" "{{ fw.name | replace('-', '_') }}_untrust" {
  name                = "{{ fw.name }}-untrust-pip"
  location            = azurerm_resource_group.main.location
  resource_group_name = azurerm_resource_group.main.name
  allocation_method   = "Static"
  sku                 = "Standard"

  tags = var.tags
}

# ---------- Network Interfaces ----------

# Management interface
resource "azurerm_network_interface" "{{ fw.name | replace('-', '_') }}_mgmt" {
  name                = "{{ fw.name }}-mgmt-nic"
  location            = azurerm_resource_group.main.location
  resource_group_name = azurerm_resource_group.main.name

  ip_configuration {
    name                          = "mgmt"
    subnet_id                     = azurerm_subnet.{{ deployment.get_subnet_name('mgmt') | replace('-', '_') }}.id
    private_ip_address_allocation = "Dynamic"
    public_ip_address_id          = azurerm_public_ip.{{ fw.name | replace('-', '_') }}_mgmt.id
  }

  tags = var.tags
}

# Untrust interface (ethernet1/1)
resource "azurerm_network_interface" "{{ fw.name | replace('-', '_') }}_untrust" {
  name                 = "{{ fw.name }}-untrust-nic"
  location             = azurerm_resource_group.main.location
  resource_group_name  = azurerm_resource_group.main.name
  enable_ip_forwarding = true

  ip_configuration {
    name                          = "untrust"
    subnet_id                     = azurerm_subnet.{{ deployment.get_subnet_name('untrust') | replace('-', '_') }}.id
    private_ip_address_allocation = "Dynamic"
    public_ip_address_id          = azurerm_public_ip.{{ fw.name | replace('-', '_') }}_untrust.id
  }

  tags = var.tags
}

# Trust interface (ethernet1/2)
{% set trust_subnet = deployment.get_subnet_name('trust', 'branch' ~ fw.index if fw.firewall_type == 'branch' else None) %}
resource "azurerm_network_interface" "{{ fw.name | replace('-', '_') }}_trust" {
  name                 = "{{ fw.name }}-trust-nic"
  location             = azurerm_resource_group.main.location
  resource_group_name  = azurerm_resource_group.main.name
  enable_ip_forwarding = true

  ip_configuration {
    name                          = "trust"
    subnet_id                     = azurerm_subnet.{{ trust_subnet | replace('-', '_') }}.id
    private_ip_address_allocation = "Dynamic"
  }

  tags = var.tags
}

# ---------- Virtual Machine ----------

resource "azurerm_linux_virtual_machine" "{{ fw.name | replace('-', '_') }}" {
  name                            = "{{ fw.name }}"
  location                        = azurerm_resource_group.main.location
  resource_group_name             = azurerm_resource_group.main.name
  size                            = "{{ fw.vm_settings.size }}"
  admin_username                  = var.firewall_username
  admin_password                  = var.firewall_password
  disable_password_authentication = false
  zone                            = "{{ fw.vm_settings.availability_zone }}"

  network_interface_ids = [
    azurerm_network_interface.{{ fw.name | replace('-', '_') }}_mgmt.id,
    azurerm_network_interface.{{ fw.name | replace('-', '_') }}_untrust.id,
    azurerm_network_interface.{{ fw.name | replace('-', '_') }}_trust.id,
  ]

  os_disk {
    name                 = "{{ fw.name }}-osdisk"
    caching              = "ReadWrite"
    storage_account_type = "Premium_LRS"
  }

  source_image_reference {
    publisher = "{{ fw.vm_settings.image.publisher }}"
    offer     = "{{ fw.vm_settings.image.offer }}"
    sku       = "{{ fw.vm_settings.image.sku }}"
    version   = "{{ fw.vm_settings.image.version }}"
  }

  plan {
    name      = "{{ fw.vm_settings.image.sku }}"
    publisher = "{{ fw.vm_settings.image.publisher }}"
    product   = "{{ fw.vm_settings.image.offer }}"
  }

  # Bootstrap configuration via custom_data
  custom_data = base64encode(join("\n", [
    "storage-account=${azurerm_storage_account.bootstrap.name}",
    "access-key=${azurerm_storage_account.bootstrap.primary_access_key}",
    "file-share=${azurerm_storage_container.{{ fw.name | replace('-', '_') }}_bootstrap.name}",
    "share-directory=None"
  ]))

  boot_diagnostics {
    storage_account_uri = null  # Use managed storage
  }

  tags = merge(var.tags, {
    "firewall_type" = "{{ fw.firewall_type }}"
    "role"          = "{{ fw.role }}"
  })

  depends_on = [
    azurerm_storage_blob.{{ fw.name | replace('-', '_') }}_init_cfg,
    azurerm_storage_blob.{{ fw.name | replace('-', '_') }}_bootstrap_xml,
  ]
}

{% endfor %}
