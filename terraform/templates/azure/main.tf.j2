# Main Infrastructure - Resource Group and Networking
# Generated by pa_config_lab TerraformGenerator

# =============================================================================
# Resource Group
# =============================================================================

resource "azurerm_resource_group" "main" {
  name     = var.resource_group_name
  location = var.location

  tags = var.tags
}

# =============================================================================
# Virtual Network
# =============================================================================

resource "azurerm_virtual_network" "main" {
  name                = var.vnet_name
  location            = azurerm_resource_group.main.location
  resource_group_name = azurerm_resource_group.main.name
  address_space       = var.vnet_address_space

  tags = var.tags
}

# =============================================================================
# Subnets
# =============================================================================

{% for subnet in subnets %}
resource "azurerm_subnet" "{{ subnet.name | replace('-', '_') }}" {
  name                 = "{{ subnet.name }}"
  resource_group_name  = azurerm_resource_group.main.name
  virtual_network_name = azurerm_virtual_network.main.name
  address_prefixes     = ["{{ subnet.prefix }}"]
}

{% endfor %}

# =============================================================================
# Network Security Groups
# =============================================================================

# Management NSG - Allow SSH/HTTPS from anywhere (for initial setup)
resource "azurerm_network_security_group" "mgmt" {
  name                = "${var.resource_group_name}-mgmt-nsg"
  location            = azurerm_resource_group.main.location
  resource_group_name = azurerm_resource_group.main.name

  security_rule {
    name                       = "AllowSSH"
    priority                   = 100
    direction                  = "Inbound"
    access                     = "Allow"
    protocol                   = "Tcp"
    source_port_range          = "*"
    destination_port_range     = "22"
    source_address_prefix      = "*"
    destination_address_prefix = "*"
  }

  security_rule {
    name                       = "AllowHTTPS"
    priority                   = 110
    direction                  = "Inbound"
    access                     = "Allow"
    protocol                   = "Tcp"
    source_port_range          = "*"
    destination_port_range     = "443"
    source_address_prefix      = "*"
    destination_address_prefix = "*"
  }

  tags = var.tags
}

# Untrust NSG - Allow all inbound (firewall will filter)
resource "azurerm_network_security_group" "untrust" {
  name                = "${var.resource_group_name}-untrust-nsg"
  location            = azurerm_resource_group.main.location
  resource_group_name = azurerm_resource_group.main.name

  security_rule {
    name                       = "AllowAll"
    priority                   = 100
    direction                  = "Inbound"
    access                     = "Allow"
    protocol                   = "*"
    source_port_range          = "*"
    destination_port_range     = "*"
    source_address_prefix      = "*"
    destination_address_prefix = "*"
  }

  tags = var.tags
}

# Trust NSG - Allow all (internal traffic)
resource "azurerm_network_security_group" "trust" {
  name                = "${var.resource_group_name}-trust-nsg"
  location            = azurerm_resource_group.main.location
  resource_group_name = azurerm_resource_group.main.name

  security_rule {
    name                       = "AllowAll"
    priority                   = 100
    direction                  = "Inbound"
    access                     = "Allow"
    protocol                   = "*"
    source_port_range          = "*"
    destination_port_range     = "*"
    source_address_prefix      = "*"
    destination_address_prefix = "*"
  }

  tags = var.tags
}

# =============================================================================
# NSG Associations
# =============================================================================

{% for subnet in subnets %}
{% if 'mgmt' in subnet.name %}
resource "azurerm_subnet_network_security_group_association" "{{ subnet.name | replace('-', '_') }}" {
  subnet_id                 = azurerm_subnet.{{ subnet.name | replace('-', '_') }}.id
  network_security_group_id = azurerm_network_security_group.mgmt.id
}
{% elif 'untrust' in subnet.name %}
resource "azurerm_subnet_network_security_group_association" "{{ subnet.name | replace('-', '_') }}" {
  subnet_id                 = azurerm_subnet.{{ subnet.name | replace('-', '_') }}.id
  network_security_group_id = azurerm_network_security_group.untrust.id
}
{% elif 'trust' in subnet.name %}
resource "azurerm_subnet_network_security_group_association" "{{ subnet.name | replace('-', '_') }}" {
  subnet_id                 = azurerm_subnet.{{ subnet.name | replace('-', '_') }}.id
  network_security_group_id = azurerm_network_security_group.trust.id
}
{% endif %}
{% endfor %}

# =============================================================================
# Route Tables
# =============================================================================

# Trust route table - routes through firewall
resource "azurerm_route_table" "trust" {
  name                          = "${var.resource_group_name}-trust-rt"
  location                      = azurerm_resource_group.main.location
  resource_group_name           = azurerm_resource_group.main.name
  disable_bgp_route_propagation = true

  tags = var.tags
}

# Default route to firewall (will be updated after firewall deployment)
resource "azurerm_route" "trust_default" {
  name                = "default"
  resource_group_name = azurerm_resource_group.main.name
  route_table_name    = azurerm_route_table.trust.name
  address_prefix      = "0.0.0.0/0"
  next_hop_type       = "VirtualAppliance"
  next_hop_in_ip_address = var.firewall_trust_ip
}

# Associate route table with trust subnets
{% for subnet in subnets %}
{% if 'trust' in subnet.name %}
resource "azurerm_subnet_route_table_association" "{{ subnet.name | replace('-', '_') }}" {
  subnet_id      = azurerm_subnet.{{ subnet.name | replace('-', '_') }}.id
  route_table_id = azurerm_route_table.trust.id
}
{% endif %}
{% endfor %}
