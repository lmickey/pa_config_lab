# Panorama Management Server
# Generated by pa_config_lab TerraformGenerator

{% if panorama %}
# =============================================================================
# Panorama: {{ panorama.name }}
# =============================================================================

# ---------- Public IP ----------

resource "azurerm_public_ip" "panorama_mgmt" {
  name                = "{{ panorama.name }}-mgmt-pip"
  location            = azurerm_resource_group.main.location
  resource_group_name = azurerm_resource_group.main.name
  allocation_method   = "Static"
  sku                 = "Standard"

  tags = var.tags
}

# ---------- Network Interface ----------

resource "azurerm_network_interface" "panorama_mgmt" {
  name                = "{{ panorama.name }}-mgmt-nic"
  location            = azurerm_resource_group.main.location
  resource_group_name = azurerm_resource_group.main.name

  ip_configuration {
    name                          = "mgmt"
    subnet_id                     = azurerm_subnet.{{ deployment.get_subnet_name('mgmt') | replace('-', '_') }}.id
    private_ip_address_allocation = "Dynamic"
    public_ip_address_id          = azurerm_public_ip.panorama_mgmt.id
  }

  tags = var.tags
}

# ---------- Virtual Machine ----------

resource "azurerm_linux_virtual_machine" "panorama" {
  name                            = "{{ panorama.name }}"
  location                        = azurerm_resource_group.main.location
  resource_group_name             = azurerm_resource_group.main.name
  size                            = "{{ panorama.vm_settings.size }}"
  admin_username                  = var.panorama_username
  admin_password                  = var.panorama_password
  disable_password_authentication = false

  network_interface_ids = [
    azurerm_network_interface.panorama_mgmt.id,
  ]

  os_disk {
    name                 = "{{ panorama.name }}-osdisk"
    caching              = "ReadWrite"
    storage_account_type = "Premium_LRS"
    disk_size_gb         = 2048  # Panorama requires larger disk
  }

  source_image_reference {
    publisher = "{{ panorama.vm_settings.image.publisher }}"
    offer     = "{{ panorama.vm_settings.image.offer }}"
    sku       = "{{ panorama.vm_settings.image.sku }}"
    version   = "{{ panorama.vm_settings.image.version }}"
  }

  plan {
    name      = "{{ panorama.vm_settings.image.sku }}"
    publisher = "{{ panorama.vm_settings.image.publisher }}"
    product   = "{{ panorama.vm_settings.image.offer }}"
  }

  boot_diagnostics {
    storage_account_uri = null  # Use managed storage
  }

  tags = merge(var.tags, {
    "role" = "panorama"
  })
}
{% else %}
# Panorama not configured for this deployment
{% endif %}
